<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-plugin-mimetype"
    version="1.0.0">
    <name>Cordova Plugin MimeType</name>
    <description>Sets the mimetype for js file if not present</description>

    <platform name="android">
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="MimeTypePlugin">
          <param name="android-package" value="com.planonsoftware.MimeTypePlugin" />
          <param name="onload" value="true" />
        </feature>
      </config-file>

      <source-file src="src/android/com/planonsoftware/MimeTypePlugin.java" target-dir="src/com/planonsoftware/" />
    </platform>
</plugin>
